<div class="col-sm-10 col-sm-offset-1">
  <div class="col-xs-12 panel panel-default">
    <h1>Enter place details</h1>
    <%= simple_form_for @place do |f| %>
      <%= f.input :name, class: 'col-form-6' %>
      <%= f.input :address, class: 'col-form-6' %>
      <%= f.input :description, class: 'col-form-9' %>
      <br>
      <%= f.submit '+ add', class: 'btn btn-primary pull-right' %>
    <% end %>
    <br>
    <br>
  </div>
</div>
