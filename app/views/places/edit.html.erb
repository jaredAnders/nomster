<div class="panel panel-default col-xs-10 col-xs-offset-1">
    <h1>Edit place details</h1>
    <%= simple_form_for @place do |f| %>
      <%= f.input :name, class: 'col-form-6' %>
      <%= f.input :address, class: 'col-form-6' %>
      <%= f.input :description, class: 'col-form-9' %>
      <br>
      <div class="pull-right">
        <%= f.submit 'update', class: 'btn btn-primary' %>
        <%= link_to 'Delete',  place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?'}, class: 'btn btn-default'%>
      </div>

    <% end %>

</div>
