<% @places.each do |place| %>
  <!-- <div class="material-card col-xs-10 col-xs-offset-1"> -->
  <div class="panel panel-default col-xs-10 col-xs-offset-1">
    <h1><%= place.name %></h1>
    <i><%= place.address %></i>
    <p><%= place.description %></p>
    <a href="#">Learn More</a>
  </div>
<% end %>

<div class="col-xs-12">
  <%= paginate @places %>
</div>
