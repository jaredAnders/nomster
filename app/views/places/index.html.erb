<div class="col-sm-10 col-sm-offset-1">
  <% @places.each do |place| %>
    <%= link_to place_path(place), class: 'panel panel-default col-xs-12 col-sm-5 col-sm-offset-1' do %>
        <h2><%= place.name %></h2>
        <i><%= place.address %></i>
        <p><%= place.description %></p>
        <% if place.average_rating.present? %>
          <p class="pull-left"><b>Average user rating: <%= place.average_rating.to_f.round(1) %>/5</b></p>
        <% end %>
        <p class="pull-right btn-text">details</p>
    <% end %>
  <% end %>
</div>

<div class="col-xs-12">
  <%= paginate @places %>
</div>
